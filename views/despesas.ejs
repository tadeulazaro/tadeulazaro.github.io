    </div>

    <div class="row">
      <div class="col-md-6">
  
        <form action="/despesas" method="POST" id="despesaForm">
          <div class="mb-3" id="descricaoDespesa" style="display: none;">
                  <h2>Adicionar Despesa</h2>
            <label for="nome" class="form-label">Descrição Despesa:</label>
            <input type="text" id="nome" name="nome" class="form-control" required>
          </div>
          
          <div class="mb-3" id="tipoPagamentoCampo" style="display: none;">
            <label for="tipoPagamento" class="form-label">Tipo de Pagamento:</label>
            <select id="tipoPagamento" name="tipoPagamento" class="form-control" required>
              <option value="Débito">Débito</option>
              <option value="Crédito">Crédito</option>
            </select>
          </div>

          <div class="mb-3" id="tipoGastoss" style="display: none;">
            <label for="tipoGasto" class="form-label">Tipo de Gasto:</label>
            <select id="tipoGasto" name="tipoGasto" class="form-control" required>
              <% tiposDeGastos.forEach((tipoGasto) => { %>
                <option value="<%= tipoGasto.gastos %>"><%= tipoGasto.gastos %></option>
              <% }); %>
            </select>
          </div>
          
          
 
          
          <div class="mb-3" id="valorDespesa" style="display: none;">
            <label for="valorGasto" class="form-label">Valor da Despesa:</label>
            <input type="number" id="valorGasto" name="valorGasto" step="0.01" class="form-control" required>
          </div>
          
          <div class="mb-3" id="dataDespesa" style="display: none;">
            <label for="dataDespesa" class="form-label">Data da Despesa:</label>
            <input type="date" id="dataDespesa" name="dataDespesa" class="form-control" required>
          </div>
          <div class="mb-3" id="botoes" style="display: none;">
          <button type="submit" class="btn btn-primary add-button" id="adicionarButton">Adicionar</button>
         
   
          </div>
          <div class="mb-3" id="botoesInvisivel">
          <button type="button" class="btn btn-primary add-button" id="VerDespesas">Add_Despesas</button>
    


   
            <button type="button" class="btn btn-primary add-button" id="botoesEditartipoGasto">Editar_tipoGasto</button>
            </div>
        </form>
      </div>
    </div>


     <script>
      const descricaoDespesa = document.getElementById("descricaoDespesa");
      const tipoPagamentoCampo = document.getElementById("tipoPagamentoCampo");
      const tipoGasto = document.getElementById("tipoGastoss")
      const valorDespesa = document.getElementById("valorDespesa")
      const dataDespesa = document.getElementById("dataDespesa")
      const botoes = document.getElementById("botoes")
      const botoesInvisivel = document.getElementById("botoesInvisivel");
      const VerDespesas = document.getElementById("VerDespesas");
      //const DespesasCadastradas = document.getElementById("DespesasCadastradas");
      const botoesEditartipoGasto = document.getElementById("botoesEditartipoGasto");

    
      VerDespesas.addEventListener("click", () => {
        descricaoDespesa.style.display = "block";
        tipoPagamentoCampo.style.display = "block";
        tipoGastoss.style.display = 'block';
        valorDespesa.style.display = 'block';
        dataDespesa.style.display = 'block';
        botoes.style.display = 'block';
        botoesInvisivel.style.display = 'none';
        DespesasCadastradas.style.display = 'none'
        botoesEditartipoGasto.style.display = 'none'
      });
    
   
// Função para editar a despesa com base no _id
function editarDespesa(id) {
  // Redireciona para uma página de edição com o ID da despesa
  window.location.href = `/editarDespesa?id=${id}`;
}



    </script>
<div class="total-despesas-por-mes">
  <h3 class="total-title">Orçamento 2023:</h3>
  <div class="grid-container">
    <% for (const [mes, total] of Object.entries(totalDespesasPorMes)) { %>
      <div class="grid-item">
        <div class="mes"><%= new Date(`${mes}-01`).toLocaleString('pt-BR', { month: 'long' }) %></div>
