      </script>


      <script>
        function apagarDespesa(despesaId) {
            // Use JavaScript ou uma solicitação AJAX para enviar uma solicitação para excluir a despesa
            // Você pode usar fetch ou jQuery.ajax para fazer isso
            
            // Supondo que você esteja usando fetch:
            fetch(`/apagarDespesa/${despesaId}`, {
                method: 'DELETE'
            })
            .then(response => {
                if (response.ok) {
                    // A despesa foi excluída com sucesso
                    // Remova a linha da tabela correspondente no DOM
                    const despesaRow = document.querySelector(`tr[data-despesa-id="${despesaId}"]`);
                    if (despesaRow) {
                        despesaRow.remove();
                    }
                } else {
                    // Lida com erros se a exclusão falhar
                    console.error('Erro ao excluir a despesa.');
                }
            })
            .catch(error => {
                console.error('Erro ao excluir a despesa:', error);
            });
        }
        </script>
        




      <div class="mb-3" id="DespesasCadastradas" style="max-height: 400px; overflow-y: auto;">
        <div class="row">
            <div class="col-md-12">
                <h2><center>Despesas Cadastradas</center></h2>
                <% if (despesas.length === 0) { %>
                    <p>Nenhuma despesa cadastrada.</p>
                <% } else { %>
                    <table class="tabela-amarela">
                        <tr>
                            <th>Nome</th>
                            <th>Tipo de Pagamento</th>
                            <th>Tipo de Gasto</th>
                            <th>Valor</th>
                            <th>Data</th>
                            <th></th> <!-- Adicionar uma coluna para as ações -->
                        </tr>
                        <% despesas.forEach((despesa) => { %>
                            <tr>
                                <td><%= despesa.nome %></td>
                                <td><%= despesa.tipoPagamento %></td>
                                <td><%= despesa.tipoGasto %></td>
                                <td>R$ <%= despesa.valorGasto %></td>
                                <td><%= despesa.dataDespesa %></td>
                                <td>
                                    <!-- Botão de Editar (ícone de lápis) -->
                                    <button class="btn btn-outline-primary btn-sm" onclick="editarDespesa('<%= despesa._id %>')">
                                        <i class="fa fa-pencil"></i>
                                    </button>
                                    <!-- Botão de Apagar (ícone "X") -->
                                    <button class="btn btn-outline-danger btn-sm" onclick="apagarDespesa('<%= despesa._id %>')">
                                        <i class="fa fa-times"></i>
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    </table>
                <% } %>
            </div>
        </div>
    </div>
    
